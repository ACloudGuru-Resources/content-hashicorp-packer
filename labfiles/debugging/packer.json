{
    "variables": {
        "aws_access_key": "ACCESSKEY",
        "aws_secret_key": "SECRETKEY",
        "aws_subnet_id": "SUBNETID"
    },
    "builders": [
        {
            "type": "docker",
            "image": "ubuntu:bionic",
            "commit": true,
            "changes": [ "ENTRYPOINT [\"apache2ctl\", \"-D\", \"FOREGROUND\"]" ]
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "files/",
            "destination": "/tmp/"
        },
        {
            "type": "shell",
            "script": "scripts/init.sh"
        }
    ]
}
