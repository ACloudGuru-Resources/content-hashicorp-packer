set nocompatible              " be iMproved, required
filetype off                  " required

" Environment
set ruler
set ignorecase
set hlsearch
set number
set undofile
set termguicolors

" Tabbing
set softtabstop=4
set tabstop=4
set shiftwidth=4
set expandtab
retab

" Colors!
syntax enable
hi LineNr ctermfg=gray
set background=dark

set autoindent
